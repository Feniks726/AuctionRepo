@model Auction.WebSite.Models.LoginViewModel

@{
    Layout = "~/Views/shared/_Layout.empty.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        <fieldset class="form-signin">
            <h4>Авторизация</h4>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            @Html.ValidationSummary(true)
            <p>
                <button class="btn btn-large btn-success" type="submit">Войти</button>
            </p>
        </fieldset>
        @Html.ActionLink("Регистрация", "Registration", "Account", new { area = "" }, new { @class = "navbar-brand" })
        @Html.ActionLink("Забыт пароль", "ForgetPassword", "Account", new { area = "" }, new { @class = "navbar-brand" })
    }
</body>
</html>